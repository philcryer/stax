      "NAT1Instance":{  
         "Type":"AWS::EC2::Instance",
         "Metadata":{  
            "Comment1":"Create NAT #1"
         },
         "Properties":{  
            "InstanceType":{  
               "Ref":"PublicInstanceType"
            },
            "KeyName":{  
               "Ref":"KeyName"
